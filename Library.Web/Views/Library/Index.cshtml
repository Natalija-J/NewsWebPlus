@model List<Library.Logic.Book>

<h1>This is Library's catalogue</h1>
@if (Model.Count == 0)
{
    <b>There are no books available at this moment!</b>
}
else
{
     <table class="table table-striped">
         <tr>
             <th style="text-align: left">Book</th>
             <th style="text-align: left">Author</th>
             <th style="text-align: left">Year</th>
             <th style="text-align: center">Copies Available</th>
             <th style="text-align: center">Action</th>
         </tr>

         @foreach (var book in Model)
         {
             <tr>
                 <td style="text-align: left">@book.Title</td>
                 <td style="text-align: left">@book.Author.Name @book.Author.Surname</td>
                 <td>@book.Year</td>
                 <td style="text-align: center">@book.Copies</td>
                 <td style="text-align: center"><a asp-controller="Library" asp-action="Borrow" asp-route-title="@book.Title">Borrow</a></td>
             </tr>
         }

     </table>
}

 