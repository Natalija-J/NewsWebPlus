@model List<News.Logic.DB.Articles>

@{
    ViewData["Title"] = "Articles";
}

<h1>Articles</h1>

<a asp-controller="Article" asp-action="CreateArticle" class="btn btn-primary">Create</a>
<table class="table table-striped">
    <tr>
        <th>Id</th>
        <th>Title</th>
        <th>Author</th>
        <th>Text</th>
        <th></th>
    </tr>
    @foreach (var article in Model)
    {
        <tr>
            <td>@article.Id</td>
            <td>@article.Title</td>
            <td>@article.Author</td>
            <td>@article.Text</td>
            <td>
                <a asp-controller="Article" asp-action="EditArticle" asp-route-id="@article.Id">Edit / </a>
                <a asp-controller="Article" asp-action="Delete" asp-route-id="@article.Id">Delete</a>
            </td>
        </tr>
    }
</table>
