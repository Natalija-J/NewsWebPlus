@model NewArticle
@{
    var topicList = new SelectList(Model.Topics, "Id", "Title");
}
<div asp-validation-summary="All"></div>

<form asp-controller="Article" asp-action="CreateArticle" method="post">

    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Author"></label>
        <input asp-for="Author" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Text"></label>
        <textarea asp-for="Text" class="form-control" rows="5"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="ArticleTopicId"></label>
        <select asp-for="ArticleTopicId" asp-items="topicList" class="form-control"></select>
    </div>
    <input asp-for="Id" type="hidden" />
    <button type="submit" class="btn btn-primary">Save</button>
</form>