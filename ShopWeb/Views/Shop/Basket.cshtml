@model List<Day3_Classes.Item>

<h1>This is basket</h1>

<table class="table table-striped">
    <tr>
        <th>Item</th>
        <th>Price</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>EUR @item.Price</td>
        </tr>
    }
        <tfoot>
            <tr>
                <th id="total">Total</th>
                <td>EUR (HOW DO I GET the total?)</td>
            </tr>
        </tfoot>
    
</table>

